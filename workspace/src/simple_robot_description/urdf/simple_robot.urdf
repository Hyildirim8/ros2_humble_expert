<?xml version="1.0"?>
<robot name="basit_robot">
    <material name="red">
        <color rgba="1 0 0 1.0"/>
    </material>

    <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
    </material>

    <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
    </material>

    <link name="base_footprint">
        
    </link>

    <link name="base_link">
        <visual>
        <geometry>
            <box size="0.3 0.3 0.5"/>
        </geometry>
        <material name="red"/>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </visual>
    </link>

    <link name="second_link">
        <visual>
        <geometry>
            <cylinder length="0.5" radius="0.1"/>
        </geometry>
        <material name="blue"/>
        </visual>
    </link>

    <link name="third_link">
        <visual>
        <geometry>
            <sphere radius="0.1"/>
        </geometry>
        <material name="gray"/>
        </visual>
    </link>
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
        
    </joint>

    <joint name="base_second_joint" type="continuous">
        <parent link="base_link"/>
        <child link="second_link"/>
        <origin xyz="0.0 0.0 0.6" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 0 1"/>  
    </joint>
    
    <joint name="second_third_joint" type="prismatic">
        <parent link="second_link"/>
        <child link="third_link"/>
        <origin xyz="0.0 0.5 0.5" rpy="0.0 0.0 0.0"/>
        <axis xyz="1 0 0"/>  
        <limit lower="-0.5" upper="0.5" effort="10.0" velocity="0.1"/>
    </joint>

</robot>